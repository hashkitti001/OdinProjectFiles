doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/omnisheet.css')
  body
  header(class="navbar")
    nav
        ul
          li
            a(href="/")="Home"
          li
            a(href="/categories")="Categories"
          li
             a(href="/items")="Items"
           li
             a(href="/items/create")="Create New Item"
            li
             a(href="/categories/create")="Create New Category" 
              
    block content
     h1= "Categories"
     button.refresh(type="Refresh" onclick="refreshItemPage()") Refresh Data
    for doc in docs
     div(class="container")
        div(class="itemcontainer")
           h1= `Name : ${doc.name}`
           h3= `Description :${doc.description}`
           
         
    script.
       let refreshItemPage = () => {
        window.location.reload()
       }
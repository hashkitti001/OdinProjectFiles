doctype html 
html
  head
     title Create New Category
     link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
     link(rel='stylesheet', href='/stylesheets/omnisheet.css')
  body 
  h2="Categories"
  if errors 
    ul.alert.alert-danger 
      each error in errors 
        li= error.msg
  form.d-flex.flex-column.gap-3.mx-3(method="POST" action="/categories/create")
      label(for="name") Name
      input.form-control.my-2.col-sm-3.col-md-6.bg-dark.border-primary.text-light(id="name" name="name" placeholder="Name" required)
      
      label(for="desc") Description
      input.form-control.my-2.col-md-6.col-sm-3.bg-dark.border-primary.text-light(id="desc" name="desc" placeholder="Description" required)
      input.btn.btn-primary.col-sm-3.col-md-6(type="submit" value="Submit")
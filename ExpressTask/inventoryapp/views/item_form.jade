doctype html
html
  head
    title Create New Item
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/omnisheet.css')
  body
    h2.text.text-center New Item
    if errors 
      ul.alert.alert-danger 
        each error in errors 
          li= error.msg
    form.d-flex.flex-column.gap-3.mx-3(method="post")
      label(for="name") Name
      input.form-control.my-2.col-md-6.bg-dark.border-primary.text-light(id="name" name="name" placeholder="Name" required)

      label(for="desc") Description
      input.form-control.my-2.col-md-6.bg-dark.border-primary.text-light(id="desc" name="desc" placeholder="Description" required)

      label(for="categ") Category
      input.form-control.my-2.col-md-6.bg-dark.border-primary.text-light(id="categ" name="categ" placeholder="Category" required)

      label(for="price") Price
      input.form-control.my-2.col-md-6.bg-dark.border-primary.text-light(id="price" name="price" placeholder="Price" required)

      label(for="nis") Number in Stock
      input.form-control.my-2.col-md-6.bg-dark.border-primary.text-light(id="nis" name="nis" placeholder="Number in Stock" required)

      input.btn.btn-primary.col-md-6(type="submit" value="Submit")
